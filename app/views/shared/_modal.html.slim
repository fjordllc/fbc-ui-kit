input.a-hidden-checkbox(type="checkbox" id="#{id}")
.o-modal
  label.o-modal__overlay(for="#{id}")
  .o-modal__content
    .l-container.is-md
      .m-card
        - if defined?(title)
          .m-card__header
            h2.m-card__title
              = title
          hr.a-hr-border
        .m-card__body
          = yield
  label.o-modal__close(for="#{id}")
    .o-modal__close-icon
      i.fbc-icon-clear
    .o-modal__close-label
      | 閉じる
